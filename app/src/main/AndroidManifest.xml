<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hopto.bodaszilard.rockclimber">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:exported="true"
        android:icon="@drawable/roundlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.AddRoute"
            android:exported="true"
            android:label="@string/title_activity_add_route"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.OverView"
            android:exported="true"
            android:label="@string/title_activity_over_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".Views.ForgotPasswordActivity"
            android:exported="true"
            android:label="Forgot Password" />
        <activity
            android:name=".Views.ResetPasswordWithPin"
            android:exported="true"
            android:label="Reset Password" />

        <activity
            android:name=".Views.AddWall"
            android:exported="true"
            android:label="Add Wall" />

        <activity
            android:name=".Views.AddRegion"
            android:exported="true"
            android:label="Add Region" />
    </application>

</manifest>