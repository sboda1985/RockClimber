<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_region"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addroutebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hopto.bodaszilard.rockclimber.Views.AddRegion">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/regionname_texview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="38dp"
                android:text="Region name :"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/regionname_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/regionname_texview"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/regionname_texview"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/regionname_texview"
                android:layout_marginTop="29dp"
                android:layout_toStartOf="@+id/regionname_editText"

                android:text="Description "
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_toLeftOf="@+id/regionname_editText" />

            <EditText
                android:id="@+id/regiondescription_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/regiontextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/regiondescription_editText"
                android:layout_marginTop="13dp"
                android:text="Approach"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/regionapproach_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/regiontextView4"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/regiontextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/regionapproach_editText"
                android:layout_marginTop="20dp"
                android:text="Access :"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/regiontextView5"
                android:layout_toEndOf="@+id/regiontextView6"
                android:layout_toRightOf="@+id/regiontextView6"
                android:entries="@array/accessdifficulty" />

            <TextView
                android:id="@+id/regiontextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="31dp"
                android:text="Route quality :"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/regiontextView6"
                android:layout_toEndOf="@+id/regiontextView6"
                android:layout_toRightOf="@+id/regiontextView6"
                android:entries="@array/routequality" />

            <TextView
                android:id="@+id/regiontextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinner2"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/spinner2"
                android:layout_toStartOf="@+id/spinner2"
                android:text="Routes :"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/regioneditText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/regiontextView7"
                android:layout_alignBottom="@+id/regiontextView7"
                android:layout_toEndOf="@+id/regiontextView7"
                android:layout_toRightOf="@+id/regiontextView7"
                android:ems="10"
                android:hint="Number of walls "
                android:inputType="number" />

            <TextView
                android:id="@+id/regiontextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/regioneditText4"
                android:layout_marginTop="28dp"
                android:text="Popularity :"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/regiontextView8"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/regiontextView4"
                android:layout_toRightOf="@+id/regiontextView4"
                android:entries="@array/popularity" />

            <Button
                android:id="@+id/saveregion_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/regiontextView8"
                android:text="SAVE" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
